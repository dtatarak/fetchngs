nextflow_process {

    name "Test Process SRA_IDS_TO_RUNINFO"
    script "modules/local/sra_ids_to_runinfo.nf"
    process "SRA_IDS_TO_RUNINFO"

    test("Should run without failures without fields") {

        when {
            process {
                """
                input[0] = 'SRR9984183'
                input[1] = ''
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Should run without failures with fields") {

        when {
            process {
                """
                input[0] = 'SRR9984183'
                input[1] = 'run_accession,experiment_accession,library_layout,fastq_ftp,fastq_md5'
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
